<launch>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find ddbot_run)/rviz/tf.rviz" required="true"/>
    <include file="$(find ddbot_teleop)/launch/teleop_keyboard.launch"/>

    <machine
        name="robot"
        address="ddbot"
        user="ubuntu"
        env-loader="/home/ubuntu/setup_ros.bash"
        default="true"
    />
    
    <include file="$(find ddbot_control)/launch/ddbot_control.launch"/>

    <arg name="speed" default="12.566" /> <!-- 4 revolutions per second -->
    <node pkg="ros_lidar" type="lidar_laserscan_publisher.py" name="lidar_laserscan_publisher" args="$(arg speed)" required="true">
        <remap from="~port_lidar_sensor" to="/peripherials_ports/lidar_sensor" />
        <remap from="~port_motor" to="/peripherials_ports/arduino_lidar" />
    </node>

</launch>